# Application
APP_NAME=Crypto Risk Dashboard
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/crypto_risk_dashboard
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_RATE_LIMIT=50

ETHERSCAN_API_KEY=your-etherscan-api-key
ETHERSCAN_BASE_URL=https://api.etherscan.io/api
ETHERSCAN_RATE_LIMIT=5

ALPHAVANTAGE_API_KEY=your-alphavantage-api-key
ALPHAVANTAGE_BASE_URL=https://www.alphavantage.co/query
ALPHAVANTAGE_RATE_LIMIT=5

# Security
SECRET_KEY=your-super-secret-key-change-in-production
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# AI Insights
AI_INSIGHTS_ENABLED=true
AI_INSIGHTS_GENERATION_INTERVAL_HOURS=168
AI_INSIGHTS_MAX_LENGTH=1000

# Risk Analysis
RISK_ANALYSIS_ENABLED=true
RISK_METRICS_UPDATE_INTERVAL_MINUTES=15
VOLATILITY_WINDOW_DAYS=30
CORRELATION_WINDOW_DAYS=90

# Alerts
ALERTS_ENABLED=true
ALERTS_CHECK_INTERVAL_SECONDS=60
MAX_ALERTS_PER_USER=50

# Market Data
MARKET_DATA_UPDATE_INTERVAL_SECONDS=30
MARKET_DATA_HISTORY_DAYS=365
ENABLE_REAL_TIME_UPDATES=true
