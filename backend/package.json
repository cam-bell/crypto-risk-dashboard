{
  "name": "crypto-risk-dashboard-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "source venv/bin/activate && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "source venv/bin/activate && uvicorn main:app --host 0.0.0.0 --port 8000",
    "build": "echo 'Python backend - no build step required'",
    "test": "pytest",
    "test:watch": "pytest --watch",
    "test:coverage": "pytest --cov=app --cov-report=html",
    "lint": "flake8 app tests",
    "format": "black app tests",
    "format:check": "black --check app tests",
    "type-check": "mypy app",
    "setup:python": "pip install -r requirements.txt",
    "db:migrate": "alembic upgrade head",
    "db:rollback": "alembic downgrade -1",
    "db:revision": "alembic revision --autogenerate -m",
    "db:seed": "python scripts/seed_database.py",
    "db:reset": "python scripts/reset_database.py"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
